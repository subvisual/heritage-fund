<%=
  render partial: "partials/page_title",
         locals: {
             model_object: nil,
             page_title: t('start.page_title')
         }
%>

<h1 class="govuk-heading-xl nlhf-!-line-height-1-3">
  <%= t('start.page_heading_html') %>
</h1>

<p class="govuk-body">
  <%= t('start.use_this_service') %>
</p>

<p class="govuk-body">
  <%= t('start.use_this_service_desc') %>  
</p>

<%= form_tag(
    url: :funding_application_start,
    method: :put,
    local: true
  ) do |f| 
%>

  <%= render(
      ButtonComponent.new(
        element: "button",
        is_start_button: true,
        text: t("buttons.labels.start_now")
      )
    ) 
  %>

<% end %>

<h2 class="govuk-heading-m">
  <%= t('start.page_sub_heading_1') %>
</h2>

<ul class="govuk-list govuk-list--bullet" aria-label="a list of questions we will ask">

  <li>
    <%= t('start.we_will_ask_list.item_1') %>
  </li>

  <li>
    <%= t('start.we_will_ask_list.item_2') %>
  </li>

  <li>
    <%= t('start.we_will_ask_list.item_3') %>
  </li>

  <li>
    <%= t('start.we_will_ask_list.item_4') %>
  </li>

</ul>

<h2 class="govuk-heading-m">
  <%= t('start.page_sub_heading_2') %>
</h2>

<ul class="govuk-list govuk-list--bullet" aria-label="a list of things you will need">

  <li>
    <%= t('start.you_will_need_list.item_1') %>
  </li>

  <li>
    <%= t('start.you_will_need_list.item_2') %>
  </li>

</ul>

<h2 class="govuk-heading-m">
  <%= t('start.page_sub_heading_3') %>
</h2>

<p class="govuk-body">
  <%= t(
          "start.read_about_what_we_fund_html",
          href: link_to(
                  t("start.read_about_what_we_fund_text"),
                  "https://www.heritagefund.org.uk/funding/check-what-we-fund",
                  target: "_blank",
                  class: "govuk-link",
                  "aria-label" => "more detail about what we fund"
          )
      )
  %>
</p>

<p class="govuk-body">
  <%= t(
          "start.project_outcomes_html",
          href: link_to(
                  t("start.project_outcomes_text"),
                  "https://www.heritagefund.org.uk/funding/outcomes",
                  target: "_blank",
                  class: "govuk-link",
                  "aria-label" => "more detail about project outcomes"
          )
      )
  %>
</p>

<p class="govuk-body">
  <%= t(
          "start.application_guidance_html",
          href: link_to(
                  t("start.application_guidance_text"),
                  "https://www.heritagefund.org.uk/publications/application-guidance-ps3000-ps10000",
                  target: "_blank",
                  class: "govuk-link",
                  "aria-label" => "more information on application guidance"
          )
      )
  %>
</p>
